{% extends 'base.html.twig' %}
{% block body %}
<div class="row center">
    <div class="row">
        <h1>Modification du mot de passe</h1>
    </div>
    <form method="post" action="{{ path('user.edit.password') }}" class="form">
        <div class="row">
            <div class="row">
                <div class="col-s-12">
                    <div class="row">
                        <div class="col-s-12">
                            <label for="password">Mot de passe</label>
                        </div>
                        <div class="col-s-12">
                            <input tabindex="1" type="password" name="password" id="password"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-s-12">
                    <div class="row">
                        <div class="col-s-12">
                            <label for="password_confirm">Confirmation du mot de passe</label>
                        </div>
                        <div class="col-s-12">
                            <input tabindex="2" type="password" name="password_confirm" id="password_confirm" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-m-push-4 col-m-4 col-s-12">
                <div class="row">
                    <div class="col-s-12">
                        <input tabindex="3" type="submit" name="valider" value="Valider" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
